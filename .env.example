# Конфигурация для образовательного Stream Bot
# Скопируйте этот файл в .env и заполните своими данными

# Токен Telegram бота (получите у @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ID пользователей, которым разрешен доступ к боту (через запятую)
AUTHORIZED_USERS=123456789,987654321

# Максимальное количество одновременных симуляций (по умолчанию: 50)
MAX_CONCURRENT_SIMULATIONS=50

# Максимальная длительность симуляции в секундах (по умолчанию: 300 = 5 минут)
MAX_SIMULATION_DURATION=300

# Путь к базе данных (по умолчанию: accounts.db)
DATABASE_PATH=accounts.db

# Логирование (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ⚠️ ВАЖНО: Этот файл содержит секретные данные!
# Добавьте .env в .gitignore чтобы не загружать его в репозиторий